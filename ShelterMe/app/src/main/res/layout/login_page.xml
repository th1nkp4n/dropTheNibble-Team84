<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginPageUsername"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/login_page_username_input"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Email" />


    <EditText
        android:id="@+id/login_page_password_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_page_username_input"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password" />

    <Button
        android:id="@+id/homepage_logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/login_page_password_input"
        android:layout_marginStart="13dp"
        android:layout_marginTop="40dp"
        android:text="Log In" />

    <Button
        android:id="@+id/login_page_register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/homepage_logout_button"
        android:layout_below="@+id/homepage_logout_button"
        android:layout_marginTop="40dp"
        android:text="Register" />

</RelativeLayout>
