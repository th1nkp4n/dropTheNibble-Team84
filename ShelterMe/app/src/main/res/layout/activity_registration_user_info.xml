<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.gatech.shelterme.RegistrationUserInfo">

    <Button
        android:id="@+id/registration_user_info_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        tools:layout_editor_absoluteX="250dp"
        tools:layout_editor_absoluteY="418dp" />

    <Button
        android:id="@+id/registration_user_info_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="418dp" />

    <EditText
        android:id="@+id/registration_user_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="40dp" />

    <EditText
        android:id="@+id/registration_user_info_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="E-mail"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="125dp" />

    <EditText
        android:id="@+id/registration_user_info_password1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="210dp" />

    <EditText
        android:id="@+id/registration_user_info_password2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Password"
        tools:layout_editor_absoluteX="35dp"
        tools:layout_editor_absoluteY="295dp" />

    <TextView
        android:id="@+id/textregistration_user_info_nametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="20dp" />

    <TextView
        android:id="@+id/registration_user_info_emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-mail"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="105dp" />

    <TextView
        android:id="@+id/registration_user_info_password1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="190dp" />

    <TextView
        android:id="@+id/registration_user_info_password2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Re-enter Password"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="275dp" />
</android.support.constraint.ConstraintLayout>
